{
  "manifest_version": 3,
  "name": "CareerOS Job Capture",
  "version": "1.0.0",
  "description": "Capture jobs from hiring.cafe and other job boards into CareerOS",
  "permissions": ["storage", "activeTab", "scripting"],
  "host_permissions": [
    "https://hiring.cafe/*",
    "https://app-bedjzilj.fly.dev/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Save job to CareerOS",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://hiring.cafe/*"],
      "js": ["contentScript.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
